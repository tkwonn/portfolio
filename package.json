{
    "name": "portfolio",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "lint:fix": "next lint --fix",
        "check-format": "prettier --check .",
        "format": "prettier --write .",
        "check-all": "npm run lint && npm run check-format",
        "prepare": "husky install"
